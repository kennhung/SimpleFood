doctype html
html(lang="en")
    head
        title SimpleFood - #{pageTitle}
        link(rel="stylesheet", href="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css")
        block styleSheets
        script(src="https://code.jquery.com/jquery-3.3.1.slim.min.js")
        script(src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.6/umd/popper.min.js")
        script(src="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/js/bootstrap.min.js")
    body
        nav(class="navbar navbar-expand-lg navbar-dark bg-dark")
            a(class="navbar-brand" href="/") SimpleFood
            button(class="navbar-toggler", type="button", data-toggle="collapse" data-target="#navBarCollapse")
                span(class="navbar-toggler-icon")
            #navBarCollapse(class="collapse navbar-collapse")
                ul(class="navbar-nav mr-auto")
                    mixin navLink(href, name)
                        li(class="nav-item active")
                            a(class="nav-link", href=href)= name

                    +navLink('/', 'Home')
                    +navLink('/summary', 'Summary')
                    +navLink('/setting', 'Setting')
        .container-fluid
            block content

        block script

